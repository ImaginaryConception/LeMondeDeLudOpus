{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block header %}Profil{% endblock %}

{% block body %}

  <div class="d-flex justify-content-center my-5 infos">
    <p class="text-light text-center"><span class="fw-bold">Nom : </span>{{ app.user.lastname }}</p>
  </div>
  <div class="d-flex justify-content-center my-5 infos">
    <p class="text-light text-center"><span class="fw-bold">Prénom : </span>{{ app.user.firstname }}</p>
  </div>
  <div class="d-flex justify-content-center my-5 infos">
    <p class="text-light text-center"><span class="fw-bold">Adresse e-mail : </span>{{ app.user.email }}</p>
  </div>
  <div class="d-flex justify-content-center my-5 infos">
    <p class="text-light text-center"><span class="fw-bold">Mot de passe : </span>••••••••</p>
  </div>

  <div class="my-5 d-flex justify-content-center" id="btn-row">
    <a id="edit-profil" href="{{ path('edit_profil', {'id': user.id}) }}"><i class="fa-solid fa-user-pen"></i> Modifier le profil</a>
    <a id="my-reserve" href="{{ path('reservation_list') }}"><i class="fa-solid fa-basket-shopping"></i> Mon panier</a>
  </div>

{% endblock %}