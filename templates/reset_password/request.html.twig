{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block header %}Réinitialisation{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert flashes text-danger text-center col-5 my-5 p-3 mx-auto alert-dismissible fade show fw-bold" role="alert">{{ flash_error }}</div>
        <button type="button" class="btn-close text-light p-3 mt-1 me-1 bg-danger" data-bs-dismiss="alert" aria-label="Close"></button>
    {% endfor %}

        <div id="request_form" class="row w-50 my-5 mx-auto">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
        </div>

        <div class="my-3 text-center">
            <small class="text-light">
                Entrez votre adresse e-mail et nous allons vous envoyer un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <div class="row w-25 mx-auto">
            <button class="btn w-100" id="reset_password_request_form_save">Envoyer</button>
        </div>

        {{ form_end(requestForm) }}

    </div>

{% endblock %}